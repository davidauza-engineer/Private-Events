<h1>Create a new event</h1>
<%= form_with(model: @event, local: true) do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, size: 50 %><br>
  <br>
  <%= f.label :date %><br>
  <%= f.date_field :date, size: 50 %><br>
  <br>
  <%= f.label :description %><br>
  <%= f.text_area :description, width: 50, height: 50 %><br>
  <br>
  <%= f.submit 'Create'%>
<% end %>
